{
    "screens":[
        {
            "id":"fav_season",
            "title":"select your favorite season",
            "input":{
                "type":"radio",
                "options":[
                    {
                        "key":"winter",
                        "label":"Winter"
                    },
                    {
                        "key":"summer",
                        "label":"Summer"
                    }
                ]
            }
        },
        {
            "id":"summer_vacation",
            "title":"select summer vacation",
            "input":{
                "type":"multi_select",
                "options":[
                    {
                        "key":"beach",
                        "label":"Beach"
                    },
                    {
                        "key":"hiking",
                        "label":"Hiking"
                    },
                    {
                        "key":"canoeing",
                        "label":"Canoeing"
                    }
                ]
            }
        },
        {
            "id":"winter_vacation",
            "title":"select winter vacation",
            "input":{
                "type":"select_dropdown",
                "options":[
                    {
                        "key":"skiing",
                        "label":"Skiing"
                    },
                    {
                        "key":"winter_market",
                        "label":"Winter market"
                    },
                    {
                        "key":"northern_lights",
                        "label":"Northern Lights Seeing"
                    }
                ]
            }
        },
        {
            "id":"accomodation",
            "title":"select accomodation",
            "input":{
                "type":"select_dropdown",
                "options":[
                    {
                        "key":"airbnb",
                        "label":"Airbnb"
                    },
                    {
                        "key":"hotel",
                        "label":"Hotel"
                    },
                    {
                        "key":"couchsurfing",
                        "label":"Couchsurfing"
                    }
                ]
            }
        },
        {
            "id":"name",
            "title":"enter your name",
            "input":{
                "type":"text"
            }
        }
    ],
    "steps":[
        {
            "step":"pick_season",
            "screen":"fav_season",
            "assignPath":"$.favSeason",
            "nextSteps":[
                {
                    "step":"pick_summer_vacation",
                    "condition":{
                        "left":{
                            "type":"param",
                            "path":"$.favSeason"
                        },
                        "right":{
                            "type":"scalar",
                            "value":"summer"
                        },
                        "operator":"equals"
                    }
                },
                {
                    "step":"pick_winter_vacation",
                    "condition":{
                        "left":{
                            "type":"param",
                            "path":"$.favSeason"
                        },
                        "right":{
                            "type":"scalar",
                            "value":"winter"
                        },
                        "operator":"equals"
                    }
                }
            ]
        },
        {
            "step":"pick_summer_vacation",
            "screen":"summer_vacation",
            "assignPath":"$.summerVacation",
            "nextSteps":[
                {
                    "step":"enter_name"
                }
            ]
        },
        {
            "step":"pick_winter_vacation",
            "screen":"winter_vacation",
            "assignPath":"$.winterVacation",
            "nextSteps":[
                {
                    "step":"select_accomodation",
                    "condition":{
                        "left":{
                            "type":"param",
                            "path":"$.winterVacation"
                        },
                        "right":{
                            "type":"scalar",
                            "value":"skiing"
                        },
                        "operator":"equals"
                    }
                },
                {
                    "step":"select_accomodation",
                    "condition":{
                        "left":{
                            "type":"param",
                            "path":"$.winterVacation"
                        },
                        "right":{
                            "type":"scalar",
                            "value":"winter_market"
                        },
                        "operator":"equals"
                    }
                },
                {
                    "step":"enter_name",
                    "condition":{
                        "left":{
                            "type":"param",
                            "path":"$.winterVacation"
                        },
                        "right":{
                            "type":"scalar",
                            "value":"northern_lights"
                        },
                        "operator":"equals"
                    }
                }
            ]
        },
        {
            "step":"select_accomodation",
            "screen":"accomodation",
            "assignPath":"$.accomodation",
            "nextSteps":[
                {
                    "step":"enter_name"
                }
            ]
        },
        {
            "step":"enter_name",
            "screen":"name",
            "assignPath":"$.name"
        }
    ]
}